<Window
    x:Class="BestLogViewer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:m="clr-namespace:BestLogViewer.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BestLogViewer.ViewModels"
    Title="Best Log Viewer"
    Width="1200"
    Height="900"
    MinWidth="1000"
    MinHeight="800"
    AllowDrop="True"
    DragOver="Window_DragOver"
    Drop="Window_Drop"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Menu Bar  -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Click="OpenLog_Click" Header="_Open Log..." />
                <Separator />
                <MenuItem Click="Exit_Click" Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Click="About_Click" Header="_About" />
            </MenuItem>
        </Menu>

        <!--  Main Content with resizable left/right panes  -->
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left: keywords/palette and HTML theme preview  -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Keywords (palette removed)  -->
                <GroupBox
                    Grid.Row="0"
                    Margin="0,0,8,8"
                    Header="Keywords &amp; Colors">
                    <DockPanel>
                        <StackPanel
                            Margin="0,0,0,8"
                            DockPanel.Dock="Top"
                            Orientation="Vertical">
                            <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                                <Button
                                    Width="80"
                                    Margin="0,0,8,0"
                                    Command="{Binding AddKeywordCommand}"
                                    Content="Add" />
                                <CheckBox
                                    Margin="16,0,0,0"
                                    Content="Whole word only"
                                    IsChecked="{Binding WholeWordOnly}" />
                                <CheckBox
                                    Margin="8,0,0,0"
                                    Content="Ignore case"
                                    IsChecked="{Binding IgnoreCase}" />
                            </StackPanel>
                        </StackPanel>

                        <DataGrid
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            IsReadOnly="False"
                            ItemsSource="{Binding Keywords}"
                            SelectedItem="{Binding SelectedKeyword}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Keyword, UpdateSourceTrigger=PropertyChanged}"
                                    Header="Keyword" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding ColorHex, UpdateSourceTrigger=PropertyChanged}"
                                    Header="Color (#RRGGBB)" />
                                <!--  New: per-keyword scope selector  -->
                                <DataGridComboBoxColumn
                                    Width="Auto"
                                    Header="Scope"
                                    ItemsSource="{x:Static m:HighlightScopeValues.All}"
                                    SelectedItemBinding="{Binding Scope, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <DataGridTemplateColumn Width="100" Header="Preview">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Padding="0"
                                                Background="{Binding Brush}"
                                                BorderThickness="0"
                                                Command="{Binding DataContext.EditKeywordColorCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                ToolTip="Click to pick a color" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTemplateColumn Width="Auto" Header="Actions">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Command="{Binding DataContext.RemoveKeywordCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Content="Remove" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </DockPanel>
                </GroupBox>

                <!--  HTML output theme zone (does not change app colors)  -->
                <GroupBox
                    Grid.Row="1"
                    Margin="0,0,8,0"
                    Header="HTML Output Theme">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel
                            Grid.Row="0"
                            Margin="0,0,0,8"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Width="90"
                                VerticalAlignment="Center"
                                Text="Background:" />
                            <Border
                                Width="28"
                                Height="28"
                                Margin="0,0,4,0"
                                Background="{Binding BackgroundBrush}"
                                BorderBrush="#66000000"
                                BorderThickness="1">
                                <Button
                                    Width="28"
                                    Height="28"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Command="{Binding EditBackgroundColorCommand}"
                                    ToolTip="Edit background color" />
                            </Border>
                            <TextBox Width="120" Text="{Binding BackgroundColor, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock
                                Width="90"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                Text="Default text:" />
                            <Border
                                Width="28"
                                Height="28"
                                Margin="0,0,4,0"
                                Background="{Binding DefaultTextBrush}"
                                BorderBrush="#66000000"
                                BorderThickness="1">
                                <Button
                                    Width="28"
                                    Height="28"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Command="{Binding EditDefaultTextColorCommand}"
                                    ToolTip="Edit default text color" />
                            </Border>
                            <TextBox Width="120" Text="{Binding DefaultTextColor, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                        <!--  Live preview showing combined effect  -->
                        <Border
                            Grid.Row="1"
                            Background="{Binding BackgroundBrush}"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="4">
                            <StackPanel Margin="8">
                                <TextBlock Foreground="{Binding DefaultTextBrush}" Text="Sample default text" />
                                <ItemsControl ItemsSource="{Binding Keywords}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border
                                                Margin="2"
                                                Padding="4,2"
                                                BorderBrush="#44FFFFFF"
                                                BorderThickness="1">
                                                <TextBlock Foreground="{Binding Brush}" Text="{Binding Keyword}" />
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </Grid>
                </GroupBox>
            </Grid>

            <!--  Splitter  -->
            <GridSplitter
                Grid.Column="1"
                Width="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#33000000"
                ShowsPreview="True" />

            <!--  Right: converted files list + drop + logs bottom  -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="220" />
                </Grid.RowDefinitions>

                <GroupBox
                    Grid.Row="0"
                    Margin="8,0,0,8"
                    Header="Converted Files">
                    <Grid>
                        <!--  List with truncated output path and context menu  -->
                        <ItemsControl ItemsSource="{Binding Records}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness="0.5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="0.6*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Width="200"
                                                Text="{Binding OutputPath}"
                                                TextTrimming="CharacterEllipsis"
                                                ToolTip="{Binding OutputPath}" />
                                            <TextBlock
                                                Grid.Column="1"
                                                Width="150"
                                                Foreground="Gray"
                                                Text="{Binding ConvertedAt}" />
                                            <DockPanel
                                                Grid.Column="2"
                                                Margin="0,2"
                                                LastChildFill="True">
                                                <StackPanel
                                                    Margin="8,0,0,0"
                                                    DockPanel.Dock="Right"
                                                    Orientation="Horizontal">
                                                    <Button
                                                        Margin="0,0,4,0"
                                                        Command="{Binding DataContext.OpenRecordCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        Content="Open" />
                                                    <Button
                                                        Command="{Binding DataContext.DeleteRecordCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                        CommandParameter="{Binding}"
                                                        Content="Delete" />
                                                </StackPanel>
                                            </DockPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>

                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ContextMenu>
                                <ContextMenu>
                                    <MenuItem
                                        Command="{Binding DataContext.CopyOriginalPathCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                        Header="Copy original path" />
                                    <MenuItem
                                        Command="{Binding DataContext.CopyOutputPathCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                        Header="Copy output path" />
                                </ContextMenu>
                            </ItemsControl.ContextMenu>
                        </ItemsControl>
                    </Grid>
                </GroupBox>

                <Border
                    Grid.Row="1"
                    Margin="8,0,0,8"
                    Background="#22CCCCCC"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="6">
                    <Grid AllowDrop="True">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Drag a log file here to convert" />
                    </Grid>
                </Border>

                <!--  Log zone on right bottom  -->
                <GroupBox
                    Grid.Row="2"
                    Margin="8,0,0,0"
                    Header="Logs">
                    <DockPanel>
                        <Button
                            Margin="0,0,0,4"
                            HorizontalAlignment="Right"
                            Command="{Binding ClearLogsCommand}"
                            Content="Clear"
                            DockPanel.Dock="Top" />
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Logs}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </DockPanel>
                </GroupBox>
            </Grid>
        </Grid>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding Status}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
